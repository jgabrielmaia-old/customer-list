{
    "extends": "tslint:recommended",
    "rules": {
        "align": {
            "options" : [
                "parameters",
                "statements"
            ]
        },
        "array-type":false,
        "arrow-return-shorthand": true,
        "curly": true,
        "deprecation": {
            "severity":"warning"
        },
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
        }
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}